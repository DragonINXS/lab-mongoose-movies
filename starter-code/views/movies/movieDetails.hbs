<div>
    <h1>{{movie.title}}</h1>
    <p>Genre: {{movie.genre}}</p>
    <p>Plot: {{movie.plot}}</p>

    <p>Cast: 
        {{#each cast}}
            {{this.name}}, 
        {{/each}}
    </p>
</div>

<div>
    
    <a href="/movies/edit/{{movie._id}}">Edit</a> 
</div>

<a href="/movies/{{movie._id}}/reviews/new">Add a Review</a>

    <h2>Reviews For This Book</h2>
<div>
    {{#each movie.reviews}}
    <hr>
    <h4>{{this.reviewer}}</h4>
    <p>{{this.content}}</p>
    <form action="/movies/{{../movie._id}}/reviews/delete/{{@index}}" method="POST">
        <button>Delete this review</button>
    </form>
    {{/each}}
</div>